{% extends 'base.html.twig' %}

{% block titre %}Page d'accueil{% endblock %}
{% block body %}
    <h1>Livre</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id :</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre :</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Description :</th>
                <td>{{ livre.description }}</td>
            </tr>
            <tr>
                <th>Image :</th>
                <td>{{ livre.image }}</td>
            </tr>
            <tr>
                <th>Datedecreation :</th>
                <td>{{ livre.datedecreation ? livre.datedecreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Datedemisejour :</th>
                <td>{{ livre.datedemisejour ? livre.datedemisejour|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Prix :</th>
                <td>{{ livre.prix }} €</td> 
            </tr>
        </tbody>
    </table>
    <hr>

    <h1>Auteur</h1>

    <table class="table">
        <tbody>
 {#}           <tr>
                <th><h3>Id :</h3></th>
                <td>{{livre.auteur }}</td>
            </tr> #}
            <tr>
                <th><h3>Nom :</h3></th>
                <td>{{ livre.auteur.nom }}</td>
            </tr>
            <tr>
                <th><h3>Prenom :</h3></th>
                <td>{{ livre.auteur.prenom }}</td>
            </tr>
            <tr>
                <th><h3>Description :</h3></th>
                <td>{{ livre.auteur.description }}</td>
            </tr>
        </tbody>
    </table>


<a href="{{ path('admin_livre_index') }}"><h3>Retour à la liste des livres</h3></a>
<a href="{{ path('admin_auteur_index') }}"><h3>Retour à la liste des auteurs</h3></a>
<a href="{{ path('rechercher') }}"><h3>Rechercher</h3></a>

 
{% endblock %}